# Docker Compose Environment Variables
# Copy this file to .env.docker and fill in your values

# Docker Hub username (used to pull images)
DOCKER_USERNAME=yourusername

# Image versions (use 'latest' or specific version like '0.0.1')
FRONTEND_VERSION=latest
DOCS_VERSION=latest

# Port mappings (change if conflicts exist)
FRONTEND_PORT=3000
DOCS_PORT=3001

# Domain configuration (for production with Traefik)
DOMAIN=vibe-checker.dev
APP_DOMAIN=app.vibe-checker.dev

# Let's Encrypt email (required for SSL certificates)
LETSENCRYPT_EMAIL=your-email@example.com
